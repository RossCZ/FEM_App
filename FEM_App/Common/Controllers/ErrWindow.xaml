<Window x:Class="FEM_App.Common.ErrWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Error" Height="150" Width="300" Background="Coral">
    <Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		
		<TextBlock Text="" Name="TB_errMessage" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" 
				   TextWrapping="Wrap"/>
		<Button Content="OK" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="Button_Click"
				Width="60" Height="25" Grid.Row="1"/>
			
	</Grid>
</Window>
